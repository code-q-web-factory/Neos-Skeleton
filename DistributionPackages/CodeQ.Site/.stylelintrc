{
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
        "**/Public/**",
        "**/Private/Templates/**",
        "node_modules/**",
        "**/*.noLinter.*"
    ],
    "rules": {
        "selector-class-pattern": "[a-z-]+",
        "value-keyword-case": [
            "lower",
            {
                "camelCaseSvgKeywords": true
            }
        ],
        "function-no-unknown": [
            true,
            {
                "ignoreFunctions": [
                    "theme"
                ]
            }
        ],
        "at-rule-no-unknown": [
            true,
            {
                "ignoreAtRules": [
                    "tailwind",
                    "apply",
                    "layer"
                ]
            }
        ]
    }
}
